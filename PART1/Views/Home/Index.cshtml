@model CommunicationRig.Models.HomeIndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="text-center">
    <img src="~/Content/Title.png" alt="Title image" />
</div>

<form class="form-inline text-center" style="background-color: burlywood; padding:10px;" action="/" method="post">
    <div class="form-group">
        <label for="nameInput">Ye Name</label>
        @Html.TextBoxFor(x => x.Username, new { id = "nameInput", @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="amountInput">Amount</label>
        @Html.TextBoxFor(x => x.Amount, new { id = "amountInput", @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary" style="background-color: gold; color: brown; border-color: gold;">Donate</button>

    <label>Sum: @Model.DonationsTotal pcs | Tent: @Model.ServerAddress</label>
</form>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var signal in Model.Donations)
{
                <tr style="background-color: antiquewhite; color: black; font-family: 'MedievalSharp'; ">
                    <td>@signal.Username</td>
                    <td>@signal.Amount pcs</td>
                    <td>@signal.Timestamp.ToShortDateString() @signal.Timestamp.ToLongTimeString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <img src="~/Content/Footer.png" alt="Footer image" />
</div>