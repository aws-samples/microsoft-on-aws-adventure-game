@model IEnumerable<anyo_platform.Models.IntergalacticMissions>

@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">AnyO Current Missions</h1>
        <p class="lead">Join the interstellar community in supporting Earth's brave inhabitants. Help AnyO bridge the gap between distant galaxies and the transformed world we left behind. Your contribution brings hope, resources, and unity to those who chose to stay.</p>
        <p><a href="www.aws.com" class="btn btn-primary btn-md">Learn more &raquo;</a></p>
    </section>

    @if (Model != null)
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="~/Content/images/placeholder.jpg">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <div class="progress" style="margin-bottom: 10px;">
                                <div class="progress-bar" role="progressbar" aria-label="Basic example" aria-valuenow="@item.Current" aria-valuemin="0" aria-valuemax="100" style="width:@(item.Current)%;"></div>
                            </div>
                            <div>
                                @Html.ActionLink("Donate", "Create", "IntergalacticDonation", new { id = item.Id }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <p>There are no missions currently available.</p>
            </div>
        </div>
    }
</main>