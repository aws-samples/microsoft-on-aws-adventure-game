@model anyo_platform.Models.IntergalacticMissions

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1>@Model.Name</h1>

<p>
    @Model.Description
</p>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Banner)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Banner)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Current)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Current)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Target)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Target)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
        </dd>
    </dl>

    <h1>Donations</h1>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>
                    Message
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Donor
                </th>
                <th>
                    Package
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PackagesDonated)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackageId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
