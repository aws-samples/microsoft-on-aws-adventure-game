@using anyo_platform.Models;
@model anyo_platform.Models.IntergalacticPackages

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1>Create</h1>

<h4>IntergalacticPackages</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageContents" class="control-label"></label>
                <input asp-for="PackageContents" class="form-control" />
                <span asp-validation-for="PackageContents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageArt" class="control-label"></label>
                <input asp-for="PackageArt" class="form-control" />
                <span asp-validation-for="PackageArt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageType" class="control-label"></label>
                <select asp-for="PackageType" asp-items="Html.GetEnumSelectList<PackageType>()" class="form-control"></select>
                <span asp-validation-for="PackageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
